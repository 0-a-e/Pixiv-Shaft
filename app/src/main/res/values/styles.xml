<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="shadowText">
        <item name="android:shadowColor">#FF666666</item>
        <item name="android:shadowDx">3.5</item>
        <item name="android:shadowDy">3.5</item>
        <item name="android:shadowRadius">3.5</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <!-- You can also inherit from NNF_BaseTheme.Light -->
    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <!-- Set these to match your theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- Setting a divider is entirely optional -->
        <item name="nnf_list_item_divider">?android:attr/listDivider</item>

        <!-- Need to set this also to style create folder dialog -->
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>


        <!-- If you want to set a specific toolbar theme, do it here -->
        <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="dialog_animation_scale" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_enter</item>
        <item name="android:windowExitAnimation">@anim/zoom_exit</item>
    </style>



    <style name="dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>


    <style name="setting_text_left">
        <item name="android:textColor">@color/black_to_grey</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:layout_marginTop">@dimen/twelve_dp</item>
        <item name="android:layout_marginBottom">@dimen/twelve_dp</item>
        <item name="android:layout_marginEnd">@dimen/eighty_dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_text_head">
        <item name="android:textColor">@color/primary_to_grey</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">@dimen/eight_dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_right_arrow">
        <item name="android:layout_marginEnd">@dimen/sixteen_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>

    <style name="setting_right_switch">
        <item name="android:layout_marginEnd">@dimen/sixteen_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:checked">true</item>
        <item name="android:theme">@style/SCBSwitch</item>
    </style>

    <style name="full_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/settings_divider</item>
    </style>

    <style name="half_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/settings_divider</item>
    </style>

    <style name="ripple_rela">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primary_to_grey</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#434343</item>
    </style>

    <style name="BarTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AboutUserLeft">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/sixteen_dp</item>
        <item name="android:textColor">@color/about_user_left</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AboutUserRight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/trans</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sixteen_dp</item>
        <item name="android:layout_marginEnd">@dimen/sixteen_dp</item>
        <item name="android:layout_marginBottom">@dimen/sixteen_dp</item>
        <item name="android:textColor">@color/about_user_right</item>
        <item name="android:textColorHint">@color/about_user_right</item>
        <item name="android:autoLink">all</item>
        <item name="android:textColorLink">@color/new_color_primary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AboutUserRightDarkText" parent="AboutUserRight">
        <item name="android:textColor">@color/about_user_left</item>
    </style>

    <style name="LinearVertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearHorizon">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
