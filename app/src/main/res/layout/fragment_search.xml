<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/sixteen_dp"
                android:drawableStart="@drawable/ic_search_grey_24dp"
                android:paddingStart="@dimen/twelve_dp"
                android:drawablePadding="@dimen/six_dp"
                android:textSize="14sp"
                android:id="@+id/input_box"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="@dimen/twelve_dp"
                android:layout_marginBottom="@dimen/twelve_dp"
                android:background="@drawable/search_et_bg"
                android:layout_height="36dp">


            </EditText>


            <ImageView
                android:layout_width="30dp"
                android:padding="@dimen/four_dp"
                android:id="@+id/clear"
                android:visibility="invisible"
                android:src="@drawable/ic_cancel_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/input_box"
                android:layout_marginEnd="@dimen/six_dp"
                android:layout_height="30dp">

            </ImageView>

            </RelativeLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/hint_list"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:layout_width="wrap_content"
            android:text="搜索历史"
            android:layout_margin="@dimen/sixteen_dp"
            android:layout_height="wrap_content">


        </TextView>


        <me.next.tagview.TagCloudView
            android:layout_width="match_parent"
            android:id="@+id/search_history"
            android:layout_height="wrap_content">


        </me.next.tagview.TagCloudView>

    </LinearLayout>
</layout>