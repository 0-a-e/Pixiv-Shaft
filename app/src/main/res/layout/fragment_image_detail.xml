<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">

        <xyz.zpayh.hdimage.HDImageView
            android:layout_width="match_parent"
            android:id="@+id/real_illust_image"
            android:transitionName="big_image"
            android:scaleType="fitCenter"
            android:layout_height="match_parent" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            app:donut_finished_color="?attr/colorPrimary"
            app:donut_circle_starting_degree="-90"
            app:donut_text_color="?attr/colorPrimary"
            app:donut_finished_stroke_width="@dimen/four_dp"
            app:donut_unfinished_stroke_width="@dimen/four_dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>