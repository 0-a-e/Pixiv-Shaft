<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/illust"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitCenter">

        </ImageView>

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:donut_circle_starting_degree="-90"
            app:donut_finished_color="?attr/colorPrimary"
            app:donut_finished_stroke_width="@dimen/four_dp"
            app:donut_text_color="?attr/colorPrimary"
            app:donut_unfinished_stroke_width="@dimen/four_dp" />

    </RelativeLayout>


</layout>